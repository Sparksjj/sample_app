<div class="container">
    <div class="row">
		<% @users.each do |user|%>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        		<div class="thumbnail">
          			<img class="pull-left" src="Tags/111.png" alt="">
          			<h3><%=user.name%></h3>
          			<h4><%=user.email%></h4>
          			<%=link_to '<i class="fa fa-eye"></i> Show', user_path(user)%>
          			<a href="#" class="btn btn-success"><i class="fa fa-apple"></i>  Изменить</a>
          			<a href="#" class="btn btn-danger"><i class="fa fa-close"></i>  Удалить</a>
        		</div>
      		</div>
      	<%end%>

    </div>
</div>
<%=link_to "New user", new_user_path%>