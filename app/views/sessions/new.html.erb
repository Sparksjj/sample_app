  <% provide(:title, 'sign in') %>
  <h1>Sign in</h1>

  <div class="row">
  	<div class="span6 offset3">

  		<%=form_for(:session, url: sessions_path) do |f|%>
  	  		<%=f.label :email%>
  	  		<%=f.text_field :email%>
  	  		<%=f.label :password%>
  	  		<%=f.password_field :password %>
  	  		<div class="center"><h4><%=f.submit "Sign in", class: "btn btn-large btn-primary"%> or <%=link_to "Sign up", signup_path%></h4></div>
    	<% end %>
    </div>

  </div>